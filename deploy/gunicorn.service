# deploy/gunicorn.service

[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ubuntu  # Replace with your username
Group=www-data
WorkingDirectory=/path/to/your/youtube_manager
ExecStart=/path/to/your/venv/bin/gunicorn --workers 3 --bind unix:/path/to/your/youtube_manager/core/core.sock core.wsgi:application

[Install]
WantedBy=multi-user.target
